{
  "extends": "./packages/config/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@celhm/ui": [
        "./packages/ui/src"
      ],
      "@celhm/types": [
        "./packages/types/src"
      ],
      "@celhm/config": [
        "./packages/config"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "packages",
    "tests"
  ],
  "references": [
    {
      "path": "./packages/ui"
    },
    {
      "path": "./packages/types"
    }
  ]
}